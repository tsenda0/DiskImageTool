<Window x:Class="DiskImageTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskImageTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="584" WindowStyle="ThreeDBorderWindow">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
    </Window.Background>
    <Grid Margin="8,8,8,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Height="48" VerticalAlignment="Top" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="112" />
            </Grid.ColumnDefinitions>
            <Button x:Name="button" Content="ファイル選択..." Grid.Column="1" Margin="8,0,0,0" Click="selectImage_Click" />
            <Border BorderBrush="Black" BorderThickness="1">
                <Label x:Name="label" Content="" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
                    <Label.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                    </Label.Background>
                </Label>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="112"/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="listView" VirtualizingStackPanel.VirtualizationMode="Standard">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="選択" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="名前" Width="Auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"  Width="112" TextAlignment="Left" HorizontalAlignment="Stretch" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="サイズ" Width="Auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Length, StringFormat={}{0:N0}}"  Width="88" TextAlignment="Right" HorizontalAlignment="Stretch" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn x:Name="columnFileDate" Header="日付" Width="128" DisplayMemberBinding="{Binding WriteDateTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid Grid.Column="1" Height="Auto" Margin="8,0,0,0" Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="56"/>
                    <RowDefinition Height="56"/>
                    <RowDefinition Height="56"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="56"/>
                </Grid.RowDefinitions>
                <Button Content="全て抽出" Height="48" Click="extractAll_Click" VerticalAlignment="Center" />
                <Button x:Name="extractChecked" Grid.Row="1" VerticalAlignment="Center" Height="48" Click="extractChecked_Click">
                    <TextBlock Text="チェックした
                               ファイルを抽出" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <CheckBox x:Name="checkBoxIsUTC"  Width="Auto" Height="Auto" Margin="0,0,0,0" VerticalAlignment="Center" Grid.Row="2" VerticalContentAlignment="Center">
                    <TextBlock Text="記録された日付をUTCとする" TextWrapping="Wrap"/>
                </CheckBox>
                <Button x:Name="buttonClose" Content="閉じる" Margin="0,0,0,0" Grid.Row="4" VerticalAlignment="Center" Height="48" Click="buttonClose_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
