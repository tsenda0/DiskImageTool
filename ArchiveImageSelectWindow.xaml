<Window x:Class="DiskImageTool.ArchiveImageSelectWindpw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskImageTool"
        mc:Ignorable="d"
        Title="ArchiveImageSelectForm" Height="450" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBox" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Grid Grid.Column="1">
            <Button x:Name="button" Content="OK" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="100" Height="48" IsDefault="True" Click="button_Click"/>
            <Button x:Name="button1" Content="キャンセル" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" Width="100" Height="48" IsCancel="True" Click="button1_Click"/>
        </Grid>

    </Grid>
</Window>
