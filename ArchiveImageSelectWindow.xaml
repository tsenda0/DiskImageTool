<Window x:Class="DiskImageTool.ArchiveImageSelectWindpw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskImageTool"
        mc:Ignorable="d"
        Title="ArchiveImageSelectForm" Height="360" Width="320" WindowStartupLocation="CenterOwner">
    <Grid Margin="8,8,8,8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="112" />
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,4,0"/>
        <Grid Grid.Column="1" Margin="4,4,0,4">
            <Grid.RowDefinitions>
                <RowDefinition Height="56"/>
                <RowDefinition Height="56"/>
            </Grid.RowDefinitions>
            <Button x:Name="buttonOK" Content="OK" VerticalAlignment="Center" Height="48" IsDefault="True" Click="button_Click"/>
            <Button x:Name="buttonCancel" Content="キャンセル" VerticalAlignment="Center" Height="48" IsCancel="True" Click="button1_Click" Grid.Row="1"/>
        </Grid>

    </Grid>
</Window>
