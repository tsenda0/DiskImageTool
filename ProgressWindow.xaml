<Window x:Class="DiskImageTool.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskImageTool"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="200" Width="480" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="8,8,8,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelTitle" Content="Label" Width="Auto" Height="Auto" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="labelMessage" Content="Label"  Grid.Row="1" Width="Auto" Height="Auto" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ProgressBar x:Name="progressBar"  Grid.Row="2" Width="Auto"  Height="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="buttonCancel" Content="キャンセル" Grid.Row="3" VerticalAlignment="Center" Width="120"  Height="32" Click="buttonCancel_Click"/>

    </Grid>
</Window>
